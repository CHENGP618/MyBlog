%h1 Listing users

= link_to 'New User', new_user_path
%table
  %thead
    %tr
      %th Avatar
      %th Name
      %th Email
      %th Login
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= image_tag user.avatar(:thumb)
        %td= user.name
        %td= user.email
        %td= user.login
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

